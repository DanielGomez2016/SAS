@model IEnumerable<Escuela>

@{
    ViewBag.Title = "Escuelas";
}

<div class="" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @* titulo *@
                        <h2>Escuelas</h2>   @Html.ActionLink("Nueva Escuela", "Create", null, new { @class = "col-md-offset-med btn btn-primary btn-sm" })
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Clave</th>
                                    <th>Domicilio</th>
                                    <th>Localidad</th>
                                    <th>Municipio</th>
                                    <th>Nivel Educativo</th>
                                    <th>Turno</th>
                                    <th>Nombre Director</th>
                                    <th>Email</th>
                                    <th>Telefonos</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nombre</td>
                                        <td>@item.Clave</td>
                                        <td>@item.Domicilio</td>
                                        <td>@item.Localidades.Nombre</td>
                                        <td>@item.Municipios.Nombre</td>
                                        <td>@item.NivelEducativo.Nivel</td>
                                        <td>@item.Turno</td>
                                        <td>@item.NombreDirector</td>
                                        <td>@item.EmailDirector</td>
                                        <td> Tel: @item.Telefono Cel: @item.Celular</td>

                                        <td>
                                            <div class="btn-group">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdEscuela }, new { @class = "btn btn-primary btn-sm" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
